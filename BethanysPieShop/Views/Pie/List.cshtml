@model PieListViewModel

@* Указание в какой файл шаблона должно встроиться это тело*@
@* Если файл шаблона один на все приложение, то в этом случае указание на шаблон можно вынести
в отдельный файл _ViewStart.cshtml, который должен находиться в папке Views *@
@* @{
    Layout = "_Layout";
} *@

<h1>
    @Model.CurrentCategory
</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var pie in Model.Pies)
    {
        <div class="col">
            <div class="card pie-card">
                <a asp-controller="Pie" asp-action="Details" asp-route-id="@pie.PieId">
                    <img src="@pie.ImageThumbnailUrl" class="card-img-top" alt="@pie.Name" />
                </a>
                <div class="card-body pie-button">
                    <h4 class="d-grid"/>
                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link"
                               asp-controller="Pie"
                               asp-action="Details"
                               asp-route-id="@pie.PieId">@pie.Name</a>
                        </h2>
                        <h5 class="text-nowrap">
                            @pie.Price.ToString("c")
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
